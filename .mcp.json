{
  "mcpServers": {
    "sparkle": {
      "type": "stdio",
      "command": "node",
      "args": ["./mcp-server/dist/index.js"],
      "env": {
        "SPARKLE_API_URL": "${SPARKLE_API_URL:-https://localhost:3000}",
        "SPARKLE_AUTH_TOKEN": "${AUTH_TOKEN}",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      }
    }
  }
}
