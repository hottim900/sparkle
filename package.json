{
  "name": "sparkle",
  "version": "1.0.0",
  "description": "Self-hosted PWA for personal idea capture + task management with Zettelkasten note maturity flow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hottim900/sparkle.git"
  },
  "type": "module",
  "engines": {
    "node": ">=22.0.0 <24.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx watch --env-file=.env server/index.ts",
    "build": "vite build",
    "start": "NODE_ENV=production node --env-file=.env --import tsx server/index.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'server/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}' 'server/**/*.ts'",
    "format": "prettier --write 'src/**/*.{ts,tsx}' 'server/**/*.ts' '*.{js,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx}' 'server/**/*.ts' '*.{js,json}'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@sentry/node": "^10.40.0",
    "@vitest/runner": "^4.0.18",
    "better-sqlite3": "^12.6.2",
    "chrono-node": "^2.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.7.4",
    "hono-rate-limiter": "^0.5.3",
    "lucide-react": "^0.575.0",
    "marked": "^17.0.3",
    "next-themes": "^0.4.6",
    "pino": "^10.3.1",
    "radix-ui": "^1.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "tsx": "^4.19.2",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/js": "^9.39.3",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.2.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^25.3.2",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.27",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "postcss": "^8.5.1",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^6.0.7",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "serialize-javascript": "^7.0.3",
    "esbuild": ">=0.25.0"
  }
}
